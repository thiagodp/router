{
    "name": "phputil/router",
    "description": "ExpressJS-like router for PHP",
    "type": "library",
    "license": "MIT",
    "scripts": {
        "test": "kahlan",
        "test2": "kahlan --reporter=verbose",
        "cov": "kahlan --coverage",
        "check": "phpstan analyze src",
        "l1": "phpstan analyze src --level=1"
    },
    "require": {
        "php": ">=7.4",
        "ext-mbstring": "*",
        "ext-json": "*",
        "ext-pcre": "*"
    },
    "require-dev": {
        "kahlan/kahlan": "^5.2",
        "phpstan/phpstan": "^1.9"
    },
    "autoload": {
        "psr-4": {
            "phputil\\router\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Thiago Delgado Pinto",
            "email": "thiago-dp@bol.com.br"
        }
    ]
}
